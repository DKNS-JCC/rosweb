# 🔧 Configuración del Sistema TurtleBot Web Control
# Copia este archivo como .env para configuración personalizada

# =====================================
# CONFIGURACIÓN DEL SERVIDOR
# =====================================

# Puerto del servidor web (por defecto: 3000)
PORT=3000

# Entorno de ejecución (development/production)
NODE_ENV=development

# =====================================
# CONFIGURACIÓN ROS
# =====================================

# URL del ROS Bridge Server
ROS_BRIDGE_URL=ws://turtlebot-NUC.local:9090

# Timeout de reconexión ROS (milisegundos)
ROS_RECONNECT_TIMEOUT=30000

# =====================================
# CONFIGURACIÓN DE BASE DE DATOS
# =====================================

# Archivo de base de datos SQLite
DATABASE_FILE=database.db

# =====================================
# CONFIGURACIÓN DE SESIONES
# =====================================

# Secreto para firmar sesiones (cambiar en producción)
SESSION_SECRET=tu-secreto-super-seguro-aqui

# Tiempo de expiración de sesión (milisegundos)
SESSION_MAX_AGE=86400000

# =====================================
# CONFIGURACIÓN DEL ROBOT
# =====================================

# Velocidades por defecto del robot
DEFAULT_LINEAR_VELOCITY=0.2
DEFAULT_ANGULAR_VELOCITY=0.5

# Tópicos ROS a usar
TOPIC_CMD_VEL=/mobile_base/commands/velocity
TOPIC_ODOM=/odom
TOPIC_LASER=/scan
TOPIC_DIAGNOSTICS=/diagnostics
TOPIC_CAMERA=/camera/color/image_raw

# =====================================
# CONFIGURACIÓN DE SEGURIDAD
# =====================================

# Rounds para bcrypt (mayor = más seguro pero más lento)
BCRYPT_ROUNDS=10

# Habilitar CORS para desarrollo
ENABLE_CORS=true

# =====================================
# CONFIGURACIÓN DE LOGGING
# =====================================

# Nivel de logging (error, warn, info, debug)
LOG_LEVEL=info

# Habilitar logs de ROS en consola
ENABLE_ROS_LOGGING=true

# Frecuencia de logs de batería (1 = cada mensaje, 0.1 = 10% de mensajes)
BATTERY_LOG_FREQUENCY=0.1

# Frecuencia de logs de cámara (cada N frames)
CAMERA_LOG_FREQUENCY=30

# =====================================
# CONFIGURACIÓN DE MONITOREO
# =====================================

# Timeout para detectar tópicos inactivos (milisegundos)
TOPIC_TIMEOUT=5000

# Intervalo de verificación de tópicos (milisegundos)
TOPIC_CHECK_INTERVAL=10000

# =====================================
# CONFIGURACIÓN DE INTERFAZ
# =====================================

# Título de la aplicación
APP_TITLE=Sistema de Control TurtleBot - ArtTEC

# Logo de la aplicación
APP_LOGO=icon.ico

# Colores del tema (CSS)
PRIMARY_COLOR=#4129ca
SECONDARY_COLOR=#f8f9fa
SUCCESS_COLOR=#28a745
WARNING_COLOR=#ffc107
DANGER_COLOR=#dc3545
