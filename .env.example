# =====================================
# CONFIGURACIN DEL ROBOT
# =====================================

# Velocidades por defecto del robot
DEFAULT_LINEAR_VELOCITY=0.2
DEFAULT_ANGULAR_VELOCITY=0.5

# T贸picos ROS a usar
TOPIC_CMD_VEL=/mobile_base/commands/velocity
TOPIC_ODOM=/odom
TOPIC_LASER=/scan
TOPIC_DIAGNOSTICS=/diagnostics
TOPIC_CAMERA=/camera/color/image_raw

# =====================================
# CONFIGURACIN DE SEGURIDAD
# =====================================

# Rounds para bcrypt (mayor = m谩s seguro pero m谩s lento)
BCRYPT_ROUNDS=10

# Habilitar CORS para desarrollo
